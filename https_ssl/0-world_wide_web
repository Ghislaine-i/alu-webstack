#!/usr/bin/env bash
# Function to get DNS information for a subdomain
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get DNS information and extract the answer section
    dig_output=$(dig "$full_domain" +short)
    
    # Check if we got a response
    if [ -z "$dig_output" ]; then
        echo "The subdomain $subdomain is not found"
        return
    fi
    
    # Use awk to parse the output and determine record type
    # For A records, dig +short returns just the IP address
    record_type="A"
    destination=$(echo "$dig_output" | head -1)
    
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script logic
main() {
    local domain=$1
    local subdomain=$2
    
    # If only domain is provided, check the default subdomains in order
    if [ -z "$subdomain" ]; then
        for sub in www lb-01 web-01 web-02; do
            get_dns_info "$domain" "$sub"
        done
    else
        # If both domain and subdomain are provided, check only that subdomain
        get_dns_info "$domain" "$subdomain"
    fi
}

# Check if domain parameter is provided
if [ $# -lt 1 ]; then
    echo "Usage: $0 domain [subdomain]" >&2
    exit 1
fi

# Call main function with all arguments
main "$1" "$2"
