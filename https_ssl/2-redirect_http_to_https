global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms
    option forwardfor

frontend http_front
    bind *:80
    redirect scheme https code 301

frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.ghislaine.tech/combined.pem
    default_backend web_backend

backend web_backend
    balance roundrobin
    server web-01 54.88.121.204:80 check
    server web-02 52.87.157.15:80 check
