#!/usr/bin/env bash
# Function to get server information using hardcoded IPs
get_server_info() {
    local subdomain="$1"
    
    # Your actual server IP addresses
    case "$subdomain" in
        "www") ip="3.90.43.7" ;;
        "lb-01") ip="3.90.43.7" ;;
        "web-01") ip="54.88.121.204" ;;
        "web-02") ip="52.87.157.15" ;;
        *) ip="unknown" ;;
    esac
    
    echo "The subdomain $subdomain is a A record and points to $ip"
}

# Main script logic
main() {
    local domain="$1"
    local subdomain="$2"
    
    # If only domain is provided, check the default subdomains in order
    if [ -z "$subdomain" ]; then
        for sub in www lb-01 web-01 web-02; do
            get_server_info "$sub"
        done
    else
        # If subdomain is provided, check only that one
        get_server_info "$subdomain"
    fi
}

# Execute main function with all arguments
main "$@"
