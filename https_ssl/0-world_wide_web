#!/usr/bin/env bash
# Script to display DNS information for subdomains

# Function to get DNS information for a subdomain
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get DNS information
    local dig_output
    dig_output=$(dig "$full_domain" +short)
    
    # Check if we got a response
    if [ -z "$dig_output" ]; then
        echo "The subdomain $subdomain is not found"
        return 1
    fi
    
    # Use awk to parse the IP address
    local destination
    destination=$(echo "$dig_output" | awk 'NR==1')
    
    # Output the result in exact required format
    echo "The subdomain $subdomain is a A record and points to $destination"
}

# Main logic
if [ $# -lt 1 ]; then
    echo "Usage: $0 domain [subdomain]" >&2
    exit 1
fi

domain=$1
subdomain=$2

# If only domain is provided, use default subdomains
if [ -z "$subdomain" ]; then
    # Use generic subdomains that work with any domain
    for sub in www lb-01 web-01 web-02; do
        get_dns_info "$domain" "$sub"
    done
else
    # If both domain and subdomain are provided
    get_dns_info "$domain" "$subdomain"
fi
